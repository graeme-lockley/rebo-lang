let FS = import("fs")
let Str = import("str")

let _path = __FILE |> Str.dropEnd(13)

let run(suite) {
  runFiles(suite.suite("files"))
  runReadFile(suite.suite("readFile"))
  runLines(suite.suite("lines"))
}

let runFiles(suite) {
    "files" |> suite.eq(
       _path |> FS.files() |> len(), 
       16
    )
}

let runReadFile(suite) {
    let path = _path + "/t.rebo"

    "valid file" |> suite.eq(
       len(FS.readFile(path)),
       452
    )

    "invalid file" |> suite.eq(
       FS.readFile("unknown.rebo"),
       {
          error: "SystemError",
          operation: "open",
          path: "unknown.rebo",
          bufferSize: 1024,
          kind: "error.FileNotFound" 
       }
    )
}

let runLines(suite) {
    let path = _path + "/t.rebo"

    "valid file" |> suite.eq(
       len(FS.lines(path)),
       24
    )

    "invalid file" |> suite.eq(
       FS.lines("unknown.rebo"),
       {
          error: "SystemError",
          operation: "open",
          path: "unknown.rebo",
          bufferSize: 1024,
          kind: "error.FileNotFound" 
       }
    )
}
