let mod(n, m) = n - (n / m) * m

let prime?(n = 0) = {
  let testPrime(i, n) =
    if i == n -> true
    | mod(n, i) == 0 -> false
    | testPrime(i + 1, n)

  if n == 0 -> false
  | n == 1 -> false
  | n == 2 -> true
  | testPrime(2, n)
}

let nextLargestPrime(n) =
  if prime?(n) -> n
   | nextLargestPrime(n + 1)

nextLargestPrime(1000)
