let mod(n, m) = n - (n / m) * m;

let nextLargetsPrime(n) = {
    let testPrime(i, n) =
        if i == n -> true
        | mod(n, i) == 0 -> false
        | testPrime(i + 1, n);

    let prime?(n = 0) =
        if n == 0 -> false
        | n == 1 -> false
        | n == 2 -> true
        | testPrime(2, n);

    if prime?(n) -> n
     | nextLargetsPrime(n + 1);
};

nextLargetsPrime(1000);