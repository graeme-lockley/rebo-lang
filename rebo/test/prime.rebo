let prime?(n = 0) = {
  if n < 2 -> false
   | n == 2 -> true
   | { 
        let finished = false
        let i = 2
        let result = true

        while !finished -> {
           if i * i > n -> finished := true
            | n % i == 0 -> { finished := true; result := false }
            | i := i + 1
        }

        result
      }
}

let nextLargestPrime(n) =
  if prime?(n) -> n
   | nextLargestPrime(n + 1)
