let run(suite) = {
  suite.eq("while guard is true", { let t = true; while t -> { t := () }; t }, ())
  suite.eq("while guard is false", { let t = false; while t -> { t := () }; t }, false)
  suite.eq("while guard is ()", { let t = (); while t -> { t := () }; t }, ())

  suite.eq("while zero iterations",
    { let n = 0
      let iterations = 0

      while n > 0 -> { 
        n := n - 1
        iterations := iterations + 1 
      };

      [n, iterations] 
    }, [0, 0])

  suite.eq("while multiple iterations",
    { let n = 10
      let iterations = 0

      while n > 0 -> { 
        n := n - 1
        iterations := iterations + 1
      };

      [n, iterations] 
    }, [0, 10])
}
