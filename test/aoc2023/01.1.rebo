let FS = import("fs")
let Path = import("path")
let Std = import("std")

let digit?(c) = 
  int(c) >= int('0') && int(c) <= int('9')

let first(lst, p) =
  if len(lst) == 0 -> ()
   | p(lst[0]) -> lst[0]
   | first(lst[1:], p)

let last(lst, p) =
  if len(lst) == 0 -> ()
   | p(lst[len(lst) - 1]) -> lst[len(lst) - 1]
   | last(lst[0:len(lst) - 1], p)

let extractNumber(line) {
  let a = first(line, digit?)
  let b = last(line, digit?)

  int(str(a, false) + str(b, false))
}

let sum(lst) =
  lst |> Std.reduce(fn (a, b) a + b, 0) 

let lines(name) =
  Path.dir(__FILE) + name
    |> FS.lines()

let calculate(name) = 
  name
    |> lines()
    |> Std.map(extractNumber) 
    |> sum()
